<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="viewTitle">Simple Run</div>

	<div class="row">
	<div class="viewSubtitle">Signing in</div>

			<form class="editForm" name="signUpForm">
			<div class="form-group">
				<input type="text" class="form-control inputElement" placeholder="Username" />
			</div>
			<div class="form-group">
				<input type="password" class="form-control inputElement" placeholder="Password" />
			</div>
			<div class="buttons">
				<div class="row">
					<button data-hover-text="LOG IN" class="coralButton-hover" type="submit">SUBMIT</button>
				</div>
			</div>
		</form>
	</div>
	<div class="row">
			<a href="#main" data-hover-text="MAIN MENU" class="coralButton-hover">GO BACK</a>
	</div>
</fest:template>
